@{
    ViewData["Title"] = "Home Page";
}

<!-- Full-page container to center the content both vertically and horizontally -->
<div style="background-color: #fff; color: #000; height: 100vh; display: flex; justify-content: center; align-items: center; text-align: center; flex-direction: column;">

    <!-- Main Content -->
    <div>
        <!-- Main Heading with black text and red underline -->
        <h1 class="display-4" style="color: #000; border-bottom: 3px solid #e60000; padding-bottom: 10px; margin-bottom: 20px;">
            Welcome to YouTube
        </h1>

        <!-- Quote -->
        <p style="font-size: 20px; color: #333; margin-bottom: 30px;">
            "Music unites the world"
        </p>

        <!-- Button to direct users to the Index.cshtml in the YouTube folder -->
        <a href="/YouTube/Index" class="btn" style="background-color: #e60000; color: #fff; padding: 10px 20px; font-size: 18px; border-radius: 5px; text-decoration: none;">
            Search Music
        </a>
    </div>

</div>